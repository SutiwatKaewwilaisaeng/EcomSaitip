<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Seller.SellerProductCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/laptop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/laptop" />

        <ImageView
            android:id="@+id/watch"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/watch"
            />

        <ImageView
            android:id="@+id/books"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/books"
            />

        <ImageView
            android:id="@+id/sweathers"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/sweather"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/maggi"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/maggi"
            />

        <ImageView
            android:id="@+id/mama"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/mamanoddle"
            />

        <ImageView
            android:id="@+id/flour"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/flour"
            />

        <ImageView
            android:id="@+id/rosdee"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/rosdee"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/chiness_noodle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/chinessnoodle"
            />

        <ImageView
            android:id="@+id/sugar"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/sugar"
            />

        <ImageView
            android:id="@+id/fishsauce"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/fishsauce"
            />

        <ImageView
            android:id="@+id/orange"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/orangejuice"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>



</RelativeLayout>